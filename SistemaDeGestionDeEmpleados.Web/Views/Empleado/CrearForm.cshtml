@model SistemaDeGestionDeEmpleados.Web.Models.EmpleadoRequestViewModel

@{
    ViewData["Title"] = "CrearForm";
}

<h1>Crear Empleado</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="crear">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreCompleto" class="control-label"></label>
                <input asp-for="NombreCompleto" class="form-control" />
                <span asp-validation-for="NombreCompleto" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdSucursal" class="control-label"></label>
                <select asp-for="IdSucursal" class="form-control" asp-items="@(new SelectList(ViewBag.Sucursales, "Id", "Direccion"))"></select>
                <span asp-validation-for="IdSucursal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
